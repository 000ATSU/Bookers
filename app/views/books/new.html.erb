<h1>Books</h1>

<% @books.each do |book| %>
 <p><%= book.title %></p>
 <p><%= book.body %></p>
<% end %>

<% if @book.errors.any? %>
 <%= @book.errors.count %>
 <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %> 
 </ul>
<% end %>

<%= form_with model:@book, url: '/books', method: :post do |f| %>
 <h2>New book</h2>
 <label>Title</label>
 <%= f.text_field :title %>     
 <label>Body</label>
 <%= f.text_area :body %>
 <%= f.submit 'Create book' %>
<% end %> 
 
    