 <p id="notice"><%= notice %></p>
<h1>Books</h1>
<table>
 <thead>
  <tr>
   <th>title</th>
   <th>body</th>
   <th colspan="3"></th>
  </tr>
 </thead>
 <tbody>
  <% @books.each do |book| %>
     <%= book.title %>
     <%= book.body %>
     <%= link_to "Show",book_path(book.id) %>
     <%= link_to "Edit",edit_book_path(book.id)  %>
     <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %> 
  <% end %>
 </tbody>
</table>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
 <h2>New book</h2>
  <% if @book.errors.any? %>
  <h3>Error (Did not save)</h3>
   <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %> 
   </ul>
 <% end %>
  <label>Title</label>
   <%= f.text_field :title %>     
  <label>Body</label>
   <%= f.text_area :body %>
   <%= f.submit 'Create book' %>
<% end %> 